@media screen and (max-width: 640px)
    .container
        margin-left 10px
        overflow hidden
        padding-right 5px
    body
        margin 0
        width 100%
    .container, body
        overflow-x hidden
    
    p
        line-height 24px
    footer
        line-height 30px

    article
        > .time
            display none
        > h1, h2
            line-height 32px
            margin-left 0
            font-size 23px
        > p
            line-height 26px
        > .content > img
            align-self middle
        > ol, ul
            padding-left 15px
        blockquote
            border-top 0
    section#readmore, section#neighbours
        display none

    .mobile-centered-image
        position relative
        left -5px
        margin 0
        text-align center
