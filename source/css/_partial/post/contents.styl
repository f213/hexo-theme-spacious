$box-shadow = inset 0 0 0 rgba(255, 255, 255, .6), 0 22px 40px 4px rgba(0, 0, 0, .24), 0 0 0 1px rgba(0, 0, 0, .3)
$screenshot-border-radius-big = 3px
$screenshot-border-radius-small = 2px

.content
    h4
        margin-top 0
        margin-bottom 0

    p
        margin 10px 0

        @media $mobile
            line-height 26px

        &:first-child
            margin-top 0
            margin-bottom 10px
            @media $mobile
                margin-top 10px

    h2 + *,
    h3 + *,
    h4 + *,
    h5 + *
        margin-top 0

    ul, ol
        margin-top -10px
        max-width 90%

        @media $mobile
            padding-left 15px

    ol
        padding 0 0 0 40px
        counter-reset ol
        > li
            &:before
                counter-increment ol
                content counter(ol) ')\a0'
                margin-left -18px

    ul
        padding 0 0 0 1.5em
        > li
            &:before
                content '\2014\a0'
                margin-left -18px

    li
        margin-bottom 2px
        list-style-type none

    >img, >p>img
        max-width ($length-content * .8)
        margin 10px 0 30px

        &.shadow, &.screenshot, &.screenshot-small
            box-shadow $box-shadow

        &.screenshot
            border-radius $screenshot-border-radius-big
        &.screenshot-small
            border-radius $screenshot-border-radius-small

        @media $mobile
            margin-bottom 0
            max-width 80%

    // use <figure> to place images to the post
    //
    // <figure class="center"> to center-align your image
    // <figure class="shadow"> to add the default shadow to it
    // <figure class="screenshot"> will apply rounded borders to look like a standard OS X screenshot.
    //
    // The prefered width of the screenshot is 720px. If your shot is less then 720px, use <figure class="screenshot-small">
    //
    // Use <figcaption> inside of a <figure> tag to place a caption

    > figure
        display inline-block
        margin 10px 0
        padding-left 40px

        &.center
            text-align center

        &.shadow, &.screenshot, &.screenshot-small
            margin-bottom 30px
            >img
                box-shadow $box-shadow

        &.screenshot>img
            border-radius $screenshot-border-radius-big
        &.screenshot-small>img
            border-radius $screenshot-border-radius-small

        img
            box-shadow none
            margin-bottom 0

            @media $mobile
                margin-bottom 0
                max-width 80%

        figcaption
            text-align center
            color #555

        @media $mobile
            width 100%
            padding-left 0
            margin 0
            text-align center

    // default quote, no author support
    > blockquote
        border-left solid 1px grey
        padding-left .5em
        margin-left 1.5em

        @media $mobile
            border-top 0
            margin-top 0
            padding-top 0

    // for the {% youtube %} tag
    > .video-container
        margin 5px 0 20px

        position relative
        padding-bottom 56.25% // 16 x 9
        iframe
            position absolute
            width 100%
            height 100%
    > .gist
        width 80%

        @media $mobile
            width 100%

    > .soundcloud
        // used by `soundcloud` block tag
        max-width 90%
        >iframe
            overflow hidden
            border 0
            max-height 166
            width 100%

    // this class is to be places on every block that can not, for some reasons, fit a viewport
    .wide
        max-width $length-overall
        overflow-x scroll
        -webkit-overflow-scrolling touch

    // fancy tooltips
    span[title], span.tooltipstered // the .tooltipstered class is applied by jquery.tooltipster plugin which is loaded only on mobile devices
        cursor help
        border-bottom 1px dashed grey
        line-height 18px
        -webkit-tap-highlight-color rgba(0, 0, 0, 0) // disable tap highlighting

    // tables inspired by tufte-css, http://www.daveliepmann.com/tufte-css/
    table
        border-spacing 0 5px
        line-height 22px
        margin-top -5px
        text-align left
        vertical-align top
        th
            border-bottom 1px solid #AAAAAA
            font-weight bold
        td
            padding-right 20px
            padding-bottom 26px
            margin-right 50px

            &.text
                white-space nowrap

        // big tables suite well for much ammount of data or a long text
        &.big
            @media $desktop
                width 80%
            @media $mobile
                width 95%
            td
                white-space normal
                text-align left
                padding-bottom 0

